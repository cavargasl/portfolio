---
import '@/styles/global.css'
import '@/styles/fonts.css'
import { siteConfig } from '@core/shared/const/siteConfig';
import { cn } from '@/lib/utils';
import SidebarNav from '@/components/SidebarNav.astro';
import { TailwindIndicator } from '@/components/react/TailwindIndicator';
const { currentLocale } = Astro
interface Props {
  title?: string
  description?: string
}
const { title = siteConfig.name, description = siteConfig.description } = Astro.props
---

<!doctype html>
<html lang={currentLocale}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class={cn('scroll-smooth font-sans antialiased transition-colors duration-200 out-circ')}>
		<main class='flex snap-y flex-col gap-20 lg:w-[calc(100%-16rem)]'>
			<slot />
			<SidebarNav />
			<TailwindIndicator />
		</main>
	</body>
</html>

<script>
  if (localStorage.theme === 'dark' || 
      (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
    document.documentElement.classList.add('dark');
  } else {
    document.documentElement.classList.remove('dark');
  }
</script>