---
import { customT, getI18N } from "@/i18n";
import { getLangFromUrl } from "@/i18n/utils";
import { cn, siteConfigExtended } from "@/lib/utils";
import { downloadUrl } from "@core/shared/utils/downloadCV";
import SectionContainer from "../SectionContainer.astro";
import SocialMedia from "../SocialMedia.astro";
import { buttonVariants } from "../react/ui/Button";

const { currentLocale } = Astro
const i18n = getI18N({currentLocale})
const lang = getLangFromUrl(Astro.url)
const {mainNav: {contact: {id, title}}} = siteConfigExtended(i18n);
---
<SectionContainer id={id} aria-label={title} class='min-h-screen justify-center'>
  <h2 class='text-center text-3xl font-extrabold sm:text-4xl'>{i18n.contact.title}</h2>
  <p class='w-full text-center text-lg md:w-[60ch]'>{customT(i18n.contact.content, { br: <br /> })}</p>
  <SocialMedia />
  <a aria-label={i18n.contact.cv} href={downloadUrl(lang)} target="_blank" title={i18n.contact.downloadCV} class={cn(buttonVariants({ variant: 'outline' }))}>
    {i18n.contact.cv}
  </a>
</SectionContainer>