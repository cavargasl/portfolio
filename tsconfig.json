{
  "compilerOptions": {
    "target": "ES2016",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@core/*": ["./core/*"]
    }
  },
  "include": ["**/*.ts", "**/*.cjs", "**/*.mjs"],
  "exclude": ["node_modules", "./infrastructure/views/**/*"]
}
